function [] = reconstructiondemo()
directory = 'modelCastlePNG/';
Files=dir(strcat(directory, '*.png'));

n = length(Files);
[VP, F] = chainImages(Files);
save('Viewpointmatrix.mat', 'VP');
save('FeatureMatrix.mat', 'F');
% Affine Structure from Motion
% 3 Blocks
for i1=1:n
   i2 = mod(i1,  frames)+1; 
   i3 = mod(i1+1,frames)+1; 
   ind1 = find(VP(i1,:));
   ind2 = find(VP(i2,:));
   ind3 = find(VP(i3,:));
   indices = intersect(ind1,intersect(ind2,ind3))
   figure;
   subplot(1,3,1);
   imshow(im2double(imread(strcat(directory, Files(i1).name))));
   hold on;
   features = F(i1);
   
   
   
   
end

% Bundle Adjustment

% Eliminate Affine Ambiguity

% Show surface with colors from images


end